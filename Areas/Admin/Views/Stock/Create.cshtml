@model OnlineShop.Models.Stock
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ ViewData["Title"] = "Add Stock"; }

<br />

<h2 class="text-info">Add Stock</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h3>@ViewBag.message</h3>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProduitId"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProduitId"  asp-items="ViewBag.produitId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control"/>*@
            </div>
            <span asp-validation-for="ProduitId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Couleur"></label>
            </div>
            <div class="col-5">
                <input asp-for="Couleur" class="form-control" />
            </div>
            <span asp-validation-for="Couleur" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantite"></label>
            </div>
            <div class="col-5">
                @*<select asp-for="ProduitId" asp-items="ViewBag.produitId" class="form-control"></select>*@
                <input asp-for="Quantite" class="form-control" />
            </div>
            <span asp-validation-for="Quantite" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pointure"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pointure" class="form-control" />
            </div>
            <span asp-validation-for="Pointure" class="text-danger"></span>
        </div>




        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
