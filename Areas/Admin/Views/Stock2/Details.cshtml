@model OnlineShop.Models.Stock2
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ ViewData["Title"] = "Details"; }

<br />

<h2 class="text-info">Details Du Stock</h2>
<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProduitId"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="ProduitId" asp-items="ViewBag.produitId" class="form-control"></select>*@
                    <input asp-for="ProduitId" asp-items="ViewBag.produitId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProduitId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Couleur"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Couleur" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Couleur" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pointure"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Pointure" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Pointure" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quantite"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Quantite" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
       

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




